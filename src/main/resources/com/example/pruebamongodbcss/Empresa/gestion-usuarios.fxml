<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pruebamongodbcss.Modulos.Empresa.GestionUsuariosController">
   <top>
      <VBox prefHeight="60.0" prefWidth="900.0" style="-fx-background-color: #3498db;" BorderPane.alignment="CENTER">
         <children>
            <Label text="GESTIÓN DE USUARIOS" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Label text="Administre los usuarios del sistema" textFill="WHITE">
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <TabPane fx:id="tabPane" prefHeight="540.0" prefWidth="900.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab fx:id="tabUsuarios" text="Usuarios">
            <content>
              <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="900.0" spacing="10.0">
                           <children>
                              <Label text="Buscar:">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                              </Label>
                              <TextField fx:id="txtBuscarUsuario" prefHeight="30.0" prefWidth="250.0" promptText="Nombre, apellido o usuario" />
                              <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Button fx:id="btnNuevoUsuario" mnemonicParsing="false" onAction="#crearNuevoUsuario" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #2ecc71;" text="Nuevo Usuario" textFill="WHITE">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                       <HBox.margin>
                                          <Insets right="10.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        <TableView fx:id="tablaUsuarios" prefHeight="380.0" prefWidth="900.0" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="colUsuario" prefWidth="100.0" text="Usuario" />
                            <TableColumn fx:id="colNombre" prefWidth="120.0" text="Nombre" />
                            <TableColumn fx:id="colApellido" prefWidth="160.0" text="Apellido" />
                            <TableColumn fx:id="colRol" prefWidth="120.0" text="Rol" />
                            <TableColumn fx:id="colEmail" prefWidth="170.0" text="Email" />
                            <TableColumn fx:id="colTelefono" prefWidth="100.0" text="Teléfono" />
                            <TableColumn fx:id="colActivo" prefWidth="80.0" text="Activo" />
                          </columns>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="900.0" spacing="10.0">
                           <children>
                              <Button fx:id="btnResetPassword" mnemonicParsing="false" onAction="#resetearContraseña" prefHeight="35.0" text="Resetear Contraseña" />
                              <Button fx:id="btnEditarUsuario" mnemonicParsing="false" onAction="#editarUsuarioSeleccionado" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #3498db;" text="Editar" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Button>
                              <Button fx:id="btnEliminarUsuario" mnemonicParsing="false" onAction="#eliminarUsuarioSeleccionado" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #e74c3c;" text="Eliminar" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                           <padding>
                              <Insets bottom="10.0" top="10.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
            </content>
          </Tab>
          <Tab fx:id="tabVeterinarios" text="Veterinarios">
            <content>
              <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="900.0" spacing="10.0">
                           <children>
                              <Label text="Buscar:">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                              </Label>
                              <TextField fx:id="txtBuscarVeterinario" prefHeight="30.0" prefWidth="250.0" promptText="Nombre, apellido o especialidad" />
                              <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Button fx:id="btnNuevoVeterinario" mnemonicParsing="false" onAction="#crearNuevoVeterinario" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #2ecc71;" text="Nuevo Veterinario" textFill="WHITE">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                       <HBox.margin>
                                          <Insets right="10.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        <TableView fx:id="tablaVeterinarios" prefHeight="380.0" prefWidth="900.0" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="colNombreVet" prefWidth="120.0" text="Nombre" />
                            <TableColumn fx:id="colApellidoVet" prefWidth="180.0" text="Apellido" />
                            <TableColumn fx:id="colEspecialidad" prefWidth="150.0" text="Especialidad" />
                            <TableColumn fx:id="colColegiado" prefWidth="120.0" text="Nº Colegiado" />
                            <TableColumn fx:id="colHorario" prefWidth="150.0" text="Horario" />
                            <TableColumn fx:id="colDisponible" prefWidth="130.0" text="Disponibilidad" />
                          </columns>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="900.0" spacing="10.0">
                           <children>
                              <Button fx:id="btnEditarVeterinario" mnemonicParsing="false" onAction="#editarVeterinarioSeleccionado" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #3498db;" text="Editar" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Button>
                              <Button fx:id="btnEliminarVeterinario" mnemonicParsing="false" onAction="#eliminarVeterinarioSeleccionado" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #e74c3c;" text="Eliminar" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                           <padding>
                              <Insets bottom="10.0" top="10.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane> 