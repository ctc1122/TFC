<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pruebamongodbcss.Modulos.Informes.ReporteVentasController">
   <top>
      <VBox spacing="20.0" style="-fx-background-color: #f8f9fa;">
         <children>
            <!-- Título y controles -->
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Reporte de Ventas" />
                  <JFXButton onAction="#volverAlDashboard" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 5;" text="← Volver al Dashboard" />
               </children>
            </HBox>
            
            <!-- Filtros -->
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label text="Desde:" />
                  <JFXDatePicker fx:id="fechaInicio" />
                  <Label text="Hasta:" />
                  <JFXDatePicker fx:id="fechaFin" />
                  <JFXButton fx:id="btnGenerar" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 5;" text="Generar Reporte" />
                  <JFXButton fx:id="btnExportar" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 5;" text="Exportar PDF" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #f8f9fa;">
         <content>
            <VBox spacing="30.0" style="-fx-background-color: #f8f9fa;">
               <children>
                  <!-- Métricas resumen -->
                  <VBox spacing="15.0">
                     <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Resumen del Período" />
                        <HBox alignment="CENTER" spacing="40.0">
                           <children>
                              <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20;">
                                 <children>
                                    <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Total de Ventas" />
                                    <Label fx:id="lblTotalVentas" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #28a745;" text="€0.00" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20;">
                                 <children>
                                    <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Número de Facturas" />
                                    <Label fx:id="lblNumeroFacturas" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #007bff;" text="0" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20;">
                                 <children>
                                    <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Promedio por Venta" />
                                    <Label fx:id="lblPromedioVenta" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ff6b35;" text="€0.00" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets left="20.0" right="20.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Gráfico de evolución -->
                  <VBox spacing="15.0">
                     <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Evolución de Ventas" />
                        <VBox fx:id="chartContainer" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20;" />
                     </children>
                     <padding>
                        <Insets left="20.0" right="20.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Tabla de servicios más vendidos -->
                  <VBox spacing="15.0">
                     <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Servicios Más Vendidos" />
                        <TableView fx:id="tableServicios" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                          <columns>
                            <TableColumn fx:id="colServicio" prefWidth="300.0" text="Servicio" />
                            <TableColumn fx:id="colCantidad" prefWidth="150.0" text="Cantidad Vendida" />
                              <TableColumn fx:id="colTotal" prefWidth="150.0" text="Total Facturado" />
                          </columns>
                        </TableView>
                     </children>
                     <padding>
                        <Insets left="20.0" right="20.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="30.0" top="20.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane> 