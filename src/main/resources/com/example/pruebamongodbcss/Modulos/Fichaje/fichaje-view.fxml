<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import com.jfoenix.controls.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pruebamongodbcss.Modulos.Fichaje.FichajeController">
   <top>
      <VBox styleClass="header-container">
         <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="title-bar">
            <Label styleClass="module-title" text="Sistema de Fichaje" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblRelojTiempoReal" styleClass="clock-display" text="00:00:00" />
            <Label fx:id="lblFechaActual" styleClass="date-display" text="Fecha" />
         </HBox>
         
         <!-- Panel de Estado del Usuario -->
         <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="user-status-bar">
            <Label styleClass="user-info-label" text="Usuario:" />
            <Label fx:id="lblUsuarioActual" styleClass="user-name" text="Sin usuario" />
            <Separator orientation="VERTICAL" />
            <Label styleClass="status-label" text="Estado:" />
            <Label fx:id="lblEstadoFichaje" styleClass="status-value" text="Sin fichar" />
            <Region HBox.hgrow="ALWAYS" />
            <JFXButton fx:id="btnRefrescar" styleClass="refresh-button" text="🔄 Actualizar" />
         </HBox>
         
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true" styleClass="main-scroll">
         <VBox spacing="20.0">
            
            <!-- Panel de Fichaje Principal -->
            <VBox styleClass="card-container">
               <Label styleClass="card-title" text="Control de Fichaje" />
               
               <GridPane hgap="20.0" vgap="15.0" styleClass="fichaje-grid">
                  <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
                  </columnConstraints>
                  
                  <!-- Tipo de Fichaje -->
                  <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                     <Label styleClass="field-label" text="Tipo de Fichaje:" />
                     <JFXComboBox fx:id="cmbTipoFichaje" styleClass="combo-field" />
                  </VBox>
                  
                  <!-- Motivo (solo para incidencias) -->
                  <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                     <Label styleClass="field-label" text="Motivo (Incidencias):" />
                     <JFXTextField fx:id="txtMotivoIncidencia" styleClass="text-field" promptText="Especificar motivo..." />
                  </VBox>
                  
                  <!-- Botones de Acción -->
                  <VBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="2" GridPane.rowIndex="0">
                     <JFXButton fx:id="btnFicharEntrada" styleClass="primary-button, entrada-button" text="🟢 FICHAR ENTRADA" />
                     <JFXButton fx:id="btnFicharSalida" styleClass="secondary-button, salida-button" text="🔴 FICHAR SALIDA" />
                  </VBox>
               </GridPane>
               
               <!-- Información del Fichaje Actual -->
               <VBox fx:id="panelFichajeActual" styleClass="current-fichaje-panel" visible="false">
                  <Label styleClass="section-subtitle" text="Fichaje Actual" />
                  <GridPane hgap="15.0" vgap="8.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" />
                        <ColumnConstraints hgrow="SOMETIMES" />
                        <ColumnConstraints hgrow="SOMETIMES" />
                     </columnConstraints>
                     
                     <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label styleClass="info-label" text="Hora de Entrada:" />
                        <Label fx:id="lblHoraEntrada" styleClass="info-value" text="--:--" />
                     </VBox>
                     
                     <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label styleClass="info-label" text="Tiempo Trabajado:" />
                        <Label fx:id="lblTiempoTrabajado" styleClass="info-value" text="00:00" />
                     </VBox>
                     
                     <VBox GridPane.columnIndex="2" GridPane.rowIndex="0">
                        <Label styleClass="info-label" text="Estado:" />
                        <Label fx:id="lblEstadoActual" styleClass="info-value" text="Abierto" />
                     </VBox>
                  </GridPane>
               </VBox>
            </VBox>
            
            <!-- Panel de Historial -->
            <VBox styleClass="card-container">
               <HBox alignment="CENTER_LEFT" spacing="15.0">
                  <Label styleClass="card-title" text="Historial de Fichajes" />
                  <Region HBox.hgrow="ALWAYS" />
                  <JFXButton fx:id="btnExportarHistorial" styleClass="export-button" text="📊 Exportar" />
                  <JFXButton fx:id="btnGenerarInforme" styleClass="report-button" text="📋 Informe" />
               </HBox>
               
               <!-- Filtros -->
               <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="filter-bar">
                  <Label styleClass="filter-label" text="Filtros:" />
                  <DatePicker fx:id="dpFechaInicio" promptText="Fecha inicio" styleClass="date-picker" />
                  <Label text="hasta" />
                  <DatePicker fx:id="dpFechaFin" promptText="Fecha fin" styleClass="date-picker" />
                  <JFXButton fx:id="btnFiltrar" styleClass="filter-button" text="🔍 Filtrar" />
                  <JFXButton fx:id="btnLimpiarFiltros" styleClass="clear-button" text="🗑️ Limpiar" />
               </HBox>
               
               <!-- Tabla de Historial -->
               <TableView fx:id="tablaHistorial" styleClass="data-table">
                  <columns>
                     <TableColumn fx:id="colFecha" prefWidth="100.0" text="Fecha" />
                     <TableColumn fx:id="colHoraEntrada" prefWidth="80.0" text="Entrada" />
                     <TableColumn fx:id="colHoraSalida" prefWidth="80.0" text="Salida" />
                     <TableColumn fx:id="colTiempoTotal" prefWidth="90.0" text="Tiempo Total" />
                     <TableColumn fx:id="colTipoEntrada" prefWidth="120.0" text="Tipo Entrada" />
                     <TableColumn fx:id="colTipoSalida" prefWidth="120.0" text="Tipo Salida" />
                     <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
                     <TableColumn fx:id="colAcciones" prefWidth="100.0" text="Acciones" />
                  </columns>
               </TableView>
            </VBox>
            
            <!-- Panel de Administración (solo para administradores) -->
            <VBox fx:id="panelAdministracion" styleClass="card-container" visible="false">
               <Label styleClass="card-title" text="Panel de Administración" />
               
               <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="admin-controls">
                  <Label styleClass="filter-label" text="Empleado:" />
                  <JFXComboBox fx:id="cmbEmpleados" prefWidth="200.0" promptText="Seleccionar empleado" styleClass="combo-field" />
                  <JFXButton fx:id="btnVerTodosFichajes" styleClass="admin-button" text="👥 Ver Todos" />
                  <JFXButton fx:id="btnEstadisticas" styleClass="stats-button" text="📈 Estadísticas" />
                  <JFXButton fx:id="btnGestionarIncidencias" styleClass="incident-button" text="⚠️ Incidencias" />
               </HBox>
               
               <!-- Resumen Estadístico -->
               <GridPane fx:id="gridEstadisticas" hgap="20.0" vgap="10.0" styleClass="stats-grid">
                  <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" />
                     <ColumnConstraints hgrow="SOMETIMES" />
                     <ColumnConstraints hgrow="SOMETIMES" />
                     <ColumnConstraints hgrow="SOMETIMES" />
                  </columnConstraints>
                  
                  <VBox alignment="CENTER" styleClass="stat-card" GridPane.columnIndex="0" GridPane.rowIndex="0">
                     <Label styleClass="stat-value" fx:id="lblTotalEmpleados" text="0" />
                     <Label styleClass="stat-label" text="Empleados Activos" />
                  </VBox>
                  
                  <VBox alignment="CENTER" styleClass="stat-card" GridPane.columnIndex="1" GridPane.rowIndex="0">
                     <Label styleClass="stat-value" fx:id="lblFichajesHoy" text="0" />
                     <Label styleClass="stat-label" text="Fichajes Hoy" />
                  </VBox>
                  
                  <VBox alignment="CENTER" styleClass="stat-card" GridPane.columnIndex="2" GridPane.rowIndex="0">
                     <Label styleClass="stat-value" fx:id="lblIncidenciasHoy" text="0" />
                     <Label styleClass="stat-label" text="Incidencias Hoy" />
                  </VBox>
                  
                  <VBox alignment="CENTER" styleClass="stat-card" GridPane.columnIndex="3" GridPane.rowIndex="0">
                     <Label styleClass="stat-value" fx:id="lblPromedioHoras" text="0.0h" />
                     <Label styleClass="stat-label" text="Promedio Horas" />
                  </VBox>
               </GridPane>
            </VBox>
            
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
         </VBox>
      </ScrollPane>
   </center>
   
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="status-bar">
         <Label styleClass="status-text" text="Sistema de Fichaje v1.0" />
         <Region HBox.hgrow="ALWAYS" />
         <Label fx:id="lblConexionEstado" styleClass="connection-status" text="🟢 Conectado" />
      </HBox>
   </bottom>
</BorderPane> 