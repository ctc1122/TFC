<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>

<BorderPane fx:id="homeContainer" prefHeight="600.0" prefWidth="800.0" styleClass="home-container" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pruebamongodbcss.HomeViewController">
    <!-- Header section with title -->
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="home-header" fillHeight="true" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label styleClass="home-title" text="EMBRACE THE FUTURE OF ENERGY" wrapText="true">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
        </HBox>
    </top>
    
    <!-- Main content area with stacked pages -->
    <center>
        <BorderPane VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
            <!-- Page indicators -->
            <top>
                <HBox fx:id="pageIndicatorContainer" alignment="CENTER" spacing="10.0" styleClass="page-indicator-container" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="10.0" bottom="10.0" />
                    </padding>
                    <Rectangle fx:id="indicator1" width="30.0" height="8.0" arcWidth="8.0" arcHeight="8.0" styleClass="indicator-active" />
                    <Rectangle fx:id="indicator2" width="30.0" height="8.0" arcWidth="8.0" arcHeight="8.0" styleClass="indicator-inactive" />
                </HBox>
            </top>
            
            <!-- Stack of pages -->
            <center>
                <StackPane fx:id="pagesContainer" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                    <!-- Page 1: Grid Cards -->
                    <VBox fx:id="page1" styleClass="home-page" visible="true" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                        <GridPane fx:id="page1Grid" hgap="20.0" styleClass="home-grid" vgap="20.0" VBox.vgrow="ALWAYS" GridPane.hgrow="ALWAYS">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="ALWAYS" percentHeight="60" />
                                <RowConstraints vgrow="ALWAYS" percentHeight="40" />
                            </rowConstraints>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            
                            <!-- Feature Card 1: Calendar Component -->
                            <BorderPane styleClass="card, card-main" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                                <center>
                                    <fx:include source="calendar-component.fxml" />
                                </center>
                                <bottom>
                                    <HBox alignment="CENTER_RIGHT">
                                        <padding>
                                            <Insets top="10" right="10" bottom="10" left="10" />
                                        </padding>
                                        <JFXButton fx:id="btnLearnMore" styleClass="btn-card" text="LEARN MORE" />
                                    </HBox>
                                </bottom>
                            </BorderPane>
                            
                            <!-- Feature Card 2: Secondary card with placeholder rectangle instead of image -->
                            <BorderPane styleClass="card, card-secondary" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                                <center>
                                    <VBox alignment="TOP_CENTER" spacing="10.0" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                                        <!-- Replace ImageView with Rectangle as placeholder -->
                                        <Rectangle width="160.0" height="120.0" arcHeight="10.0" arcWidth="10.0" VBox.vgrow="ALWAYS">
                                            <fill>
                                                <LinearGradient endX="1.0" endY="1.0">
                                                    <stops>
                                                        <Stop color="#4d7eff" />
                                                        <Stop color="#3fd9fb" offset="1.0" />
                                                    </stops>
                                                </LinearGradient>
                                            </fill>
                                        </Rectangle>
                                        <Label styleClass="card-title-secondary" text="ELECTRIC PERFORMANCE" wrapText="true">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Label styleClass="card-text" text="Experience the power of zero emissions with exceptional acceleration and range." textAlignment="CENTER" wrapText="true" />
                                    </VBox>
                                </center>
                            </BorderPane>
                            
                            <!-- Feature Card 3: Charging stations card with placeholder rectangle -->
                            <BorderPane styleClass="card, card-secondary" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                                <center>
                                    <VBox alignment="TOP_CENTER" spacing="10.0" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                                        <!-- Replace ImageView with Rectangle as placeholder -->
                                        <Rectangle width="160.0" height="120.0" arcHeight="10.0" arcWidth="10.0" VBox.vgrow="ALWAYS">
                                            <fill>
                                                <LinearGradient endX="1.0" endY="1.0">
                                                    <stops>
                                                        <Stop color="#50e3b9" />
                                                        <Stop color="#1cc88a" offset="1.0" />
                                                    </stops>
                                                </LinearGradient>
                                            </fill>
                                        </Rectangle>
                                        <Label styleClass="card-title-secondary" text="CHARGING SOLUTIONS" wrapText="true">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Label styleClass="card-text" text="Innovative charging network provides quick and convenient power for your journey." textAlignment="CENTER" wrapText="true" />
                                    </VBox>
                                </center>
                            </BorderPane>
                        </GridPane>
                    </VBox>
                    
                    <!-- Page 2: Feature details -->
                    <VBox fx:id="page2" styleClass="home-page" visible="false" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                        <VBox alignment="TOP_CENTER" spacing="15.0" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets top="15.0" bottom="15.0" left="20.0" right="20.0" />
                            </padding>
                            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                                <JFXButton fx:id="btnBack" styleClass="btn-back" text="â† VOLVER" />
                            </HBox>
                            <Label styleClass="page-title" text="CALENDARIO DE CITAS" wrapText="true">
                                <font>
                                    <Font name="System Bold" size="22.0" />
                                </font>
                            </Label>
                            
                            <!-- Calendar Container -->
                            <BorderPane styleClass="calendar-container" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                                <!-- Calendar will be loaded here programmatically -->
                            </BorderPane>
                        </VBox>
                    </VBox>
                </StackPane>
            </center>
        </BorderPane>
    </center>
    
    <!-- Bottom section with additional controls -->
    <bottom>
        <HBox alignment="CENTER" spacing="15.0" styleClass="home-footer" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <JFXButton styleClass="btn-footer, btn-primary" text="SOLUTIONS" />
            <JFXButton styleClass="btn-footer, btn-secondary" text="ABOUT US" />
            <JFXButton styleClass="btn-footer, btn-info" text="PRICING" />
            <JFXButton fx:id="btnDemoCalendar" styleClass="btn-card" text="DEMO CALENDAR" />
        </HBox>
    </bottom>
</BorderPane> 